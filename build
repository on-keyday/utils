#!/bin/bash
BUILD_TYPE=Debug
UTILS_BUILD_TYPE=shared
COMPILER_C=clang
COMPILER_CXX=clang++
INSTALL_PREFIX=$(pwd)
cmake -D CMAKE_C_COMPILER=$COMPILER_C -D CMAKE_CXX_COMPILER=$COMPILER_CXX -G Ninja -D CMAKE_BUILD_TYPE=$BUILD_TYPE -D CMAKE_INSTALL_PREFIX=$INSTALL_PREFIX -S . -B built/$UTILS_BUILD_TYPE/$BUILD_TYPE
ninja -C built/$UTILS_BUILD_TYPE/$BUILD_TYPE
